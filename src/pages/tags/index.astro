---
import BaseLayout from '../../layouts/BaseLayout.astro';
const allPost = await Astro.glob('../posts/*.md');
const tags = [...new Set(allPost.map((post) => post.frontmatter.tags).flat())];

const pageTitle = 'Indice de Etiquetas';
---

<BaseLayout pageTitle={pageTitle}>
  <ul class='tags'>
    {
      tags.map((tag) => (
        <li class='tag'>
          <a href={`/tags/${tag}`}>{tag}</a>
        </li>
      ))
    }
  </ul>
</BaseLayout>

<style>
  a {
    color: #00539f;
  }

  .tags {
    display: grid;
    list-style: none;
    padding: 0;
  }

  .tag {
    margin: 0.25em;
    border: dotted 1px #a1a1a1;
    border-radius: 0.5em;
    padding: 0.5em 1em;
    font-size: 1.15em;
    background-color: #f8fcfd;
  }
</style>
